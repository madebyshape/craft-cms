{#

{% set fonts = {
    inter: [
        {
            file: 'inter',
            weight: 400,
            style: 'normal'
        }
    ]
} %}

{% for key, family in fonts %}
    {% for font in family %}
        <link rel="preload" href="/dist/fonts/{{ font.file }}.woff2" as="font" crossorigin>
        <style>
            @font-face {
                font-family: "{{ key }}";
                src: url("/dist/fonts/{{ font.file }}.eot");
                src: local("{{ key }}"),
                    url("/dist/fonts/{{ font.file }}.eot?#iefix") format("embedded-opentype"),
                    url("/dist/fonts/{{ font.file }}.woff2") format("woff2"),
                    url("/dist/fonts/{{ font.file }}.woff") format("woff"),
                    url("/dist/fonts/{{ font.file }}.ttf") format("truetype"),
                    url("/dist/fonts/{{ font.file }}.svg#{{ font.file }}") format("svg");
                font-weight: {{ font.weight }};
                font-style: "{{ font.style }}";
                font-display: swap;
            }
        </style>
    {% endfor %}
{% endfor %}

#}
